# Database Configuration
DATABASE_PATH=data/app.db
APP_TITLE=Simple Filedrop
APP_SUBTITLE=Simple file sharing

# OIDC Authentication (Optional)
# Leave empty to disable authentication
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_DISCOVERY_URL=https://oidc.domain/.well-known/openid-configuration
OIDC_REDIRECT_URI=https://filedrop.domain/auth/callback

# Session Security
# Generate a secure random key for production
SESSION_SECRET=a-long-random-secret

# Server Configuration
PORT=8000

# Security Configuration
# Set to true only for development/testing without OIDC
DEV_MODE=false

# File upload limits (in bytes)
# Default: 100MB = 104857600 bytes
MAX_FILE_SIZE=104857600

# CORS allowed origins (comma-separated)
# Example: https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_ORIGINS=
